{{define "dashboard"}}
{{template "admin_header" .}}
{{template "navbar" .}}
<div class="container">
	<div class="row mt-5">
		<div class="col-7">
			<h2>All articles</h2>
		</div>
		<div class="col-5">
			<button class="btn btn-success float-end">New article</button>
		</div>
	</div>
	<div class="mt-3" hx-get="/get/articles?admin=true" hx-trigger="load" hx-target="this" hx-swap="innerHTML">
		<h1>No articles found<h1>
		<h4>The articles that you publish will be shown here</h4>
	</div>
</div>
{{template "footer" .}}
{{end}}
