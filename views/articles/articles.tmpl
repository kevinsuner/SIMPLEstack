{{define "articles"}}
	{{range .Articles}}
	<div class="card mb-4">
		{{if $.IsAdmin}}
		<div class="card-header">
			{{if eq .Status "unpublished"}}
			<a href="#" class="link-light link-underline-opacity-0">Publish</a> |
			{{else}}
			<a href="#" class="link-light link-underline-opacity-0">Unpublish</a> |
			{{end}}
			<a href="#" class="link-light link-underline-opacity-0">Edit</a> |
			<a href="#" class="link-light link-underline-opacity-0">Delete</a>
		</div>
		{{end}}
		<div class="card-body">
			<h2>{{.Title}}</h2> 
			<p class="mb-1">{{.Excerpt}}</p>
		</div>
		<div class="card-footer text-body-secondary">
			Published by {{.Author}} on {{.CreatedAt.String}} {{if .UpdatedAt.String}}| Updated on {{.UpdatedAt.String}}{{end}}
		</div>
	</div>
	{{else}}
	<h1>No articles found</h1>
	<h4>The articles that you create will be shown here</h4>
	{{end}}
{{end}}
